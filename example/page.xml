<tabs pos="left" style="overflow-y : scroll">
  <tab title="Theme">
    <button id="export_theme">Export Theme</button>
    <theme-editor-x></theme-editor-x>
  </tab>
  <tab title="Tab1">
    <tool path="canvas.draw()" label="Exec Draw" useIcons="false"></tool>
    <panel title="Panel" closed="false" path="data">
      <strip mode="vertical">
      <prop path="angle1"/>
      <prop path="angle1"/>
      <prop path="angle1"/>
      </strip>
      <column>
      <pathlabel path="vector_test[0]"/>
      <pathlabel path="vector_test[1]"/>
      </column>
      <row>
      <pathlabel path="vector_test[2]"/>
      <pathlabel path="vector_test[3]"/>
      </row>
    </panel>
    <panel title="Canvas" path="canvas">
      <prop path="drawflag[BLUR]" useIcons="false" />
    </panel>
  </tab>
  <tab title="Curve Mapping">
    <prop path="data.curvemap" />
  </tab>
  <tab title="Last Command">
    <last-tool-panel-x />
  </tab>
</tabs>